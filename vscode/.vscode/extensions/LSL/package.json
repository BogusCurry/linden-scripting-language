{
    "name": "LSL",
    "publisher": "buildersbrewery",
    "description": "LSL for vscode",
    "categories": [
        "Languages"
    ],
    "version": "0.0.0",
    "engines": {
        "vscode": ">=0.9.1"
    },
//  "extensionDependencies": [],
    "dependencies": {
        "vscode-languageclient": "^2.6.3"
    },
    "activationEvents": [
        "onLanguage:lsl"
    ],
    "configuration": {
        "type": "object",
        "title": "LSL configuration",
        "properties": {
            "lsl.maxNumberOfProblems": {
                "type": "number",
                "default": 100,
                "description": "Controls the maximum number of problems produced by the server."
            }
        }
    },
    "contributes": {
        "grammars": [
            {
                "language": "lsl",
                "scopeName": "source.lsl",
                "path": "./syntaxes/LSL.tmLanguage"
            }
        ],
        "languages": [
            {
                "id": "lsl",
                "aliases": [
                    "LSL",
                    "Linden Script",
                    "Linden Scripting Language",
                    "Second Life",
                    "Second Life Script"
                ],
                "extensions": [
                    ".lsl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "commands": [
            {
                "command": "lsl.build",
                "title": "Build"
            }
        ],
        "snippets": [
            {
                "language": "lsl",
                "path": "./snippets/lsl.json"
            }
        ],
        "themes": [
            {
                "label": "Linden Lab Viewer Theme",
                "uiTheme": "vs-light",
                "path": "./themes/LSL.tmTheme"
            }
        ]
    }
}
